<h1>Eat-Da-Burger!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-block uneaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block uneaten=false}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Submit</button>
  <p>Enter a burger you want to eat then Click the "Submit" button.</p>
</form>